<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/salmon</item>
        <item name="android:colorPrimaryDark">@color/salmon</item>
        <item name="android:windowBackground">@color/salmon</item>
        <item name="android:keyBackground">@color/salmon</item>
        <item name="android:navigationBarColor">@color/salmon</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
        <item name="android:colorControlActivated">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:colorControlHighlight">@color/darkSalmon</item>
        <item name="android:colorAccent">@color/darkSalmon</item>
    </style>
    <style name="SpinnerItem" parent="Theme.AppCompat.Light.NoActionBar">
      <item name="android:textSize">18dp</item>
    </style>

    <style name="SpinnerDropDownItem" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/mydivider</item>
    </style>
</resources>
